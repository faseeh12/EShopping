@model EShopping.Areas.Admin.Models.SupplierViewModel

@{
    ViewBag.Title = "Create";
}

<!--Main Dashboard-->
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
    <div class="main">
        <div class="col-lg-12">
            <div class="inline">
                <div class="col-lg-6">
                    <h1>Add Supplier</h1>
                </div>
                <div class="col-lg-6">
                    <div class="float-right">
                        <a class="btn btn-outline-dark" href="Supplier.html">Check List</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Form-->
        <br>
        <div class="col-lg-12">
            @using (Html.BeginForm(FormMethod.Post)){
                <div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Company Name</label>
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-mr" , placeholder = "i.e Tcs, Leaopard, or any other courier company" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Website</label>
                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Supplier First Name</label>
                        @Html.TextBoxFor(m => m.ContactFName, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="text" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter first name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Supplier Last Name</label>
                        @Html.TextBoxFor(m => m.ContactLName, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="text" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter last name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="tel" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter contact number">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="email" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Supplier email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Address 1</label>
                        @Html.TextBoxFor(m => m.Address1, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="text" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Address 1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Address 2</label>
                        @Html.TextBoxFor(m => m.Address2, new { @class = "form-control form-mr", placeholder = "Supplier's company website" })
                        <input type="text" class="form-control form-mr" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Address 2">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Country</label>
                        <select class="form-control form-mr">
                            <option disabled selected>Select Country</option>
                            <option>Active</option>
                            <option>Inactive</option>
                            <option>Pending</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">State</label>
                        <select class="form-control form-mr">
                            <option disabled selected>Select State</option>
                            <option>Active</option>
                            <option>Inactive</option>
                            <option>Pending</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">City</label>
                        <select class="form-control form-mr">
                            <option disabled selected>Select City</option>
                            <option>Active</option>
                            <option>Inactive</option>
                            <option>Pending</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="add-btn">Add</button>
                </div>
            }
        </div>
</main>